---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import NoteEditor from '../components/NoteEditor.astro';
import '../styles/theme.css';
import { getNotes, getSelected } from '../lib/store';

const notes = getNotes();
const selected = getSelected();
---

<Layout>
  <main class="app">
    <Sidebar notes={notes} selectedId={selected ? selected.id : null} />
    <section class="content">
      {selected ? <NoteEditor note={selected} /> : <div class="card empty-placeholder">
        <h2>Notes</h2>
        <p>Select a note from the sidebar or create a new one to get started.</p>
      </div>}
    </section>
  </main>

  <script>
    // Initialize default note only on client
    import("../lib/store").then(({ initializeIfEmpty }) => {
      try { initializeIfEmpty(); } catch {}
    });
  </script>
</Layout>

<style>
  .app {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: 16px;
    padding: 16px;
  }
  .content {
    min-height: calc(100vh - 32px);
  }
  .empty-placeholder {
    height: 100%;
    display: grid;
    place-items: center;
    padding: 24px;
    text-align: center;
  }

  @media (max-width: 860px) {
    .app {
      grid-template-columns: 1fr;
    }
  }
</style>
